@model Gestion_Prestamos.Models.Rol

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rol</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_rol" />
            <div class="form-group">
                <label asp-for="rol_descripcion" class="control-label"></label>
                <input asp-for="rol_descripcion" class="form-control" />
                <span asp-validation-for="rol_descripcion" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="rol_estado" /> @Html.DisplayNameFor(model => model.rol_estado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
